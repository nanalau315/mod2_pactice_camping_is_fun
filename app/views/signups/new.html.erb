<% if flash[:errors]%>
<% flash[:errors].each do |e| %>
<p style="color: red;"><%= e %></p>
<% end %>
<% end %>

<h1>New Signup!!</h1>
<%= form_for @signup do |f| %>
<%= f.label :time %><br>
<%= f.number_field :time , max: 23, min: 0 %><br><br>
<%= f.label "Camper:" %>
<%= f.collection_select :camper_id, @campers, :id, :name %><br><br>
<%= f.label "Activity:" %>
<%= f.collection_select :activity_id, @activities, :id, :name %><br><br>
<%= f.submit %>
<% end %>